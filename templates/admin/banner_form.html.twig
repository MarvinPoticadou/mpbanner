{% extends '@PrestaShop/Admin/layout.html.twig' %}
{% trans_default_domain 'Admin.Design.Feature' %}

{% block content %}
  {{ form_start(form) }}
  <div class="row justify-content-center">
    <div class="col-xl-10">
      <div class="card">
        <h3 class="card-header">
          <i class="material-icons">mode_edit</i>
          {% if form.vars.data.id is defined and form.vars.data.id %}
            {{ 'Edit'|trans({}, 'Modules.Mpbanner.Admin') }}
          {% else %}
            {{ 'New advanced banner'|trans({}, 'Modules.Mpbanner.Admin') }}
          {% endif %}
        </h3>
        <div class="card-block row">
          <div class="card-text">
            {{ form_row(form.title) }}
            {{ form_row(form.subTitle) }}
            {{ form_row(form.imageFile) }}
            {% if bannerImage is defined and bannerImage is not null %}
              <div class="col-sm-12">
                <figure class="figure">
                  <img src="{{ bannerImage }}" class="figure-img img-fluid img-thumbnail">
                </figure>
              </div>
            {% endif %}
            {{ form_row(form.coverImageFile) }}
            {% if coverImage is defined and coverImage is not null %}
              <div class="col-sm-12">
                <figure class="figure">
                  <img src="{{ coverImage }}" class="figure-img img-fluid img-thumbnail">
                </figure>
              </div>
            {% endif %}
            {{ form_row(form.coverPosition) }}
            {{ form_row(form.mobileImageFile) }}
            {% if bannerImageMobile is defined and bannerImageMobile is not null %}
              <div class="col-sm-12">
                <figure class="figure">
                  <img src="{{ bannerImageMobile }}" class="figure-img img-fluid img-thumbnail">
                </figure>
              </div>
            {% endif %}
            {{ form_row(form.mobileBackgroundColor) }}
            {{ form_row(form.url) }}
            {{ form_row(form.cta) }}
            {{ form_row(form.flag) }}
            {{ form_row(form.description) }}
            {{ form_row(form.status) }}
          </div>
        </div>
        <div class="card-footer">
          <div class="d-flex justify-content-between">
            <a href="{{ url('admin_mpbanner_list') }}" class="btn btn-secondary">{{ 'Cancel'|trans({}, 'Admin.Actions') }}</a>
            <button class="btn btn-primary">{{ 'Save'|trans({}, 'Admin.Actions') }}</button>
          </div>
        </div>
      </div>
    </div>
  </div>
  {{ form_end(form) }}
{% endblock %}
 {% block javascripts %}
   {{ parent() }}

   <script src="{{ asset('../modules/mpbanner/public/build/form.js') }}"></script>
 {% endblock %}
